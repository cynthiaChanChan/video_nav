page {
    height: 100%;
    width: 100%;
}
.page {
    width: 100%;
    height: 100%;
}

swiper {
	height: 80%;
}

swiper-item .pic {
	width: 55%;
	margin: 120rpx auto 50rpx;
}

swiper-item .intro {
	color: #042e36;
	font-size: 30rpx;
	text-align: center;
	line-height: 1.5;
	padding: 0 10%;
}

swiper-item .intro text text {
	font-size: 35rpx;
}

swiper-item .intro #blue {
	color: #009ebe;
}

swiper-item .intro #pink {
	color: #ff616f;
}

swiper-item .intro #purple {
	color: #6d50e1;
}

swiper-item .intro #green {
	color: #049b3d;
}

swiper-item.last .intro {
	text-align: left;
	padding: 0 12%;
}

.swiper-button {
	margin: 0 auto;
	text-align: center;
    font-size: 31rpx;
    padding: 16rpx 0;
    width: 33%;
    border-radius: 13rpx;
    bottom: 110rpx;
    color: #19b955;
    border: 1px solid #19b955;
}

.swiper-button.none {
	display: none;
}